# OWL React Frontend Environment Variables

# API Connection Settings
VITE_API_URL=http://localhost:8000/api

# Optional: API keys can be set here or in the backend .env file
# VITE_OPENAI_API_KEY=your_openai_api_key

# Development Settings
VITE_DEV_MODE=true

# WebSocket Configuration
VITE_ENABLE_WEBSOCKETS=true

# UI Customization
VITE_DEFAULT_THEME=light
VITE_ANIMATION_ENABLED=true

# OpenAI API Base URL (optional) 
# This MUST include /v1 at the end to avoid 404 errors
VITE_OPENAI_API_BASE_URL=https://api.openai.com/v1

# Additional model API keys can be added as needed
# VITE_ANTHROPIC_API_KEY=your_anthropic_key_here
# VITE_GOOGLE_API_KEY=your_google_api_key_here
# etc..